\setbeamertemplate{headline}{  
  \leavevmode

  \begin{beamercolorbox}[wd=\paperwidth]{headline}
    \begin{columns}[T]
      \begin{column}{.02\paperwidth}
      \end{column}
      \begin{column}{.7\paperwidth}
        \vskip4ex
        \raggedleft
        \usebeamercolor{title in headline}{\color{fg}\textbf{\LARGE{\inserttitle}}\\[3ex]}
        \vspace{5mm}
        \usebeamercolor{author in headline}{\color{fg}\large{\insertauthor}\\[3ex]}
        \usebeamercolor{institute in headline}{\color{fg}\large{\insertinstitute}\\[3ex]} 
      \end{column}
      \begin{column}{.25\paperwidth}
        \vskip15ex
        \begin{center}
          \includegraphics[width=.9\linewidth]{expanded_logo_gold}
        \end{center}
        \vskip2ex
      \end{column}
      \begin{column}{.02\paperwidth}
      \end{column}
    \end{columns}
    \vskip2ex
  \end{beamercolorbox}

  \begin{beamercolorbox}[wd=\paperwidth]{lower separation line head}
    \rule{0pt}{5pt}
  \end{beamercolorbox}
}

