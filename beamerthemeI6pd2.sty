\definecolor{headBack}{HTML}{535967}  %  e.g. for headline background
\definecolor{titleHead}{HTML}{0e0f12}  %  e.g. title in headline
\definecolor{postBack}{HTML}{a0a5b2}  %  e.g. for poster background
\definecolor{blockBack}{HTML}{5d5d5d}  %  e.g. for block background
\definecolor{sepLines}{HTML}{FFFFFF}  %  e.g. title in headline, separation lines
\definecolor{alert}{HTML}{535967}  %  e.g. for alert


\setbeamercolor{headline}{fg=white,bg=headBack}
\setbeamercolor{footline}{fg=white, bg=headBack}
\setbeamerfont{footline}{size=\large,series=\tt}
\setbeamercolor{separation line}{bg=sepLines}
\setbeamercolor{title in headline}{fg=sepLines}
\setbeamercolor{author in headline}{fg=taorange}
\setbeamercolor{institute in headline}{fg=ta2orange}

\setbeamercolor{framesubtitle}{fg=ta3orange, bg=ta2gray}
\setbeamercolor{author in head/foot}{fg=taorange, bg=ta2gray}
\setbeamercolor{title in head/foot}{fg=ta2orange, bg=ta2gray}

\setbeamercolor*{normal text}{fg=tachameleon, bg=ta2gray}
\setbeamercolor*{block body}{bg=ta2aluminium,fg=black}
\setbeamercolor*{block title}{fg=taorange,bg=ta3gray}
\setbeamerfont{block title}{size=\large,series=\bf}
\setbeamercolor{upper separation line head}{fg=ta2orange}

\setbeamercolor*{example body}{fg=ta3aluminium,bg=ta2gray}
\setbeamercolor*{example text}{fg=ta3aluminium,bg=ta2gray}
\setbeamercolor*{example title}{bg=taorange,fg=ta2gray}

%\setbeamercolor{alerted text}{fg=ta3gray}

%\setbeamercolor{example text}{fg=taorange}
\setbeamercolor{structure}{fg=ta3skyblue}

\setbeamertemplate{itemize items}[triangle]
\setbeamertemplate{navigation symbols}{}  % no navigation on a poster

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\setbeamertemplate{block begin}{
  \vskip.75ex
  \begin{beamercolorbox}[ht=3.5ex,dp=0.5ex,center,leftskip=-1em,colsep*=.75ex]{block title}%
    \usebeamerfont*{block title}%
    {\phantom{Gg}\insertblocktitle}% phantom because of baseline problem
  \end{beamercolorbox}%
  {\ifbeamercolorempty[bg]{block body}{}{\nointerlineskip\vskip-0.5pt}}%
  \usebeamerfont{block body}%
  \begin{beamercolorbox}[leftskip=1em,colsep*=.75ex,sep=0.5ex,vmode]{block body}%
    \ifbeamercolorempty[bg]{block body}{\vskip-.25ex}{\vskip-.75ex}\vbox{}%
  }
  \setbeamertemplate{block end}{
  \end{beamercolorbox}
}

