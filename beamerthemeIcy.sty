% headline colors and fonts
\setbeamercolor{headline}{fg=white,bg=headBack}
\setbeamercolor{title in headline}{fg=sepLines}
\setbeamercolor{author in headline}{fg=white}
\setbeamercolor{institute in headline}{fg=postBack}
\setbeamercolor{logo in headline}{fg=black,bg=postBack}

% lines
%\setbeamercolor{upper separation line head}{fg=ta2orange}
\setbeamercolor{separation line}{bg=sepLines}

% footline colors and fonts
\setbeamercolor{footline}{fg=white,bg=headBack}
\setbeamerfont{footline}{fg=white,size=\normalsize}

% poster background, body colors, and fonts
\setbeamercolor*{normal text}{fg=black,bg=postBack}

% block environment
\setbeamercolor*{block body}{bg=white,fg=black}
\setbeamercolor*{block title}{fg=sepLines,bg=headBack}
\setbeamerfont{block title}{size=\large,series=\bf}

% example environment
\setbeamercolor*{example title}{fg=white,bg=headBack}
\setbeamerfont{example title}{size=\large,series=\bf,bg=headBack,fg=white}

